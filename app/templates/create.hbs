<h1 class="submission">Create a collection</h1>
<section>

    <fieldset>
        <h2>Add title </h2>
        {{input class="form-control" value=collection.title placeholder="Enter collection name"}}
    </fieldset>

    <fieldset>
        <h2>Select collection type</h2>
      {{#radio-button value="repository" groupValue=collectionType changed="typeToggled"}}
        Repository
      {{/radio-button}}
      {{#radio-button value="meeting" groupValue=collectionType changed="typeToggled"}}
        Meeting
      {{/radio-button}}
    </fieldset>

    <fieldset>
        <h2>Add description <span class="text-muted">Optional</span></h2>
        {{textarea class="form-control" value=collection.description rows="6"}}
    </fieldset>

    <fieldset>
      <h2>Collection Settings</h2>
      <br>
      <h4>Moderation Style</h4>
      {{#radio-button value=true groupValue=moderationStyle changed="moderationToggled"}}
          Pre-moderation
      {{/radio-button}}
      {{#radio-button value=false groupValue=moderationStyle changed="moderationToggled"}}
          Post-moderation
      {{/radio-button}}
      <hr>
      <h4>Who can submit?</h4>
      {{#radio-button value=true groupValue=submissionStyle changed="submissionStyleToggled"}}
        Anyone
      {{/radio-button}}
      {{#radio-button value=false groupValue=submissionStyle changed="submissionStyleToggled"}}
        Only people with an invitation
      {{/radio-button}}
    </fieldset>

    <fieldset>
    </fieldset>
<section>

</section>

    <fieldset>
        {{#link-to 'explore' class="btn btn-default"}} Cancel {{/link-to}}
        <button class="btn btn-primary {{unless collection.title 'disabled'}}" {{action 'saveCollection'}}>
            Continue
        </button>
    </fieldset>




</section>


