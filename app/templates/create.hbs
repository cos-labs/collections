<div class="hero">
    <h2>Create a collection</h2>
</div>
<div class="form-holder">

    <section class="form-section">
        <h4>Add title </h4>
        {{input class="form-control" value=title placeholder="Enter collection name"}}
    </section>

    <section class="form-section">
        <h4>Select collection type</h4>
        {{#each typeList as |type|}}
        <div class="radio">
            {{radio-button id=type.value value=type.value name="radio-collection-type" checked=collectionType}}
            <label for="{{type.value}}" >{{type.label}}<p>{{type.description}}</p></label>
        </div>
        {{/each}}
    </section>

    <section class="form-section">
        <h4>Add description <span class="text-muted">Optional </span></h4>
        {{textarea class="form-control" value=description rows="6"}}
    </section>

    {{#if (eq collectionType 'meeting')}}

    <section class="form-section">
        <h4> Add Location </h4>
        {{input class="form-control" value=location placeholder="Enter meeting location"}}
    </section>

    <section class="form-section">
        <h4> Add Address </h4>
        {{input class="form-control" value=address placeholder="Enter meeting address"}}
    </section>

    <section class="form-section">
        <h4> Add Meeting Dates </h4>
        Start Date:
        {{bs-datetimepicker date=startDate}}
        End Date:
        {{bs-datetimepicker date=endDate}}
    </section>

    {{/if}}

    <section class="form-section">
        <h4>Submission Form Type </h4>
        <select class="form-control" onchange={{action 'setWorkflow'}}>
            <option disabled selected> -- Select a submission workflow for the service -- </option>
            {{#each workflows as |workflowChoice|}}
            <option value={{workflowChoice.id}} selected={{eq selectedWorkflow.id workflowChoice.id}}>{{workflowChoice.title}}</option>
            {{/each}}
        </select>
        <br />    
        {{#link-to 'explore' class="btn btn-default"}} Cancel {{/link-to}}
        <button class="btn btn-primary {{unless title 'disabled'}}" {{action 'addCollection'}}>
            Continue
        </button>
    </section>
</div>