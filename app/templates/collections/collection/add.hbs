<h1 class="form-banner">{{caxe.workflow.title}}</h1>

<div class="form-holder">

    {{#if (eq caxe.workflow.submissionFormType 'Website')}}

        {{add-website model=model transition=(action "transition")}}

    {{else}}

        <div class="form-section" style="background-color:#daf5ff; border-color:#b2dcff">

            {{caxe.workflow.description}}

        </div>

        <div class="form-section" style="background-color:#fff5da; border-color:#ffdcb2">
            Any changes you make here are automatically saved. You can use the reference code <span style="background-color:#ddd; color:#333;">{{caxe.id}}</span> to load this submission again.
        </div>

        {{#each caxe.workflow.sortedSections as |section|}}

            <div class="form-section">    
                <div class="label">
                    {{section.label}}
                </div>
                <p>
                    {{section.description}}
                </p>
                <div >

                    {{#each section.sortedWidgets as |widget|}}
                        {{component widget.widgetType
                            widget=widget
                            collection=collection
                            parameters=widget.caseParameters}}
                    {{/each}}
                </div>
            </div>

        {{/each}}

    {{/if}}

</div>
