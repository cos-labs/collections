<div class="hero">
    <h1>{{collection.title}} Submissions</h1>
    <a class="btn btn-success btn-lg" {{action "newCase" collection}}>
        Start a new submission
    </a>
</div>
<div class="text-center" style=" margin-top: 15px; margin-bottom: 15px;" >
    All of your submissions to the {{collection.title}}. In-progress submissions may be continued by pressing the continue button.
</div>
<div class="active-cases">
    <div class="table-heading" style="background-color: #444; color: #fff;">
        <div class="form-type">Form Type</div>
        <div class="continue-button"></div>
    </div>
    {{#each items as |item|}}
        {{case-list-item item=item collection=collection}}

    {{else}}
        <div class="empty-state">
            You have not started any submissions to {{collection.title}}
        </div>
    {{/each}}
</div>
