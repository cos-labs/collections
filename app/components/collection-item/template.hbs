{{#if cardView}}
    <div class="coll-item-wrapper">
        {{#if organizeMode}}
            {{#unless (eq item.type 'group')}}
                <div class="coll-item-organize pointer {{if item.selected 'item-selected'}}" {{action 'markSelected' item}}>
                    <i class="fa fa-check"></i>
                    <p>{{if item.selected 'Click to unselect' 'Click to select'}}</p>
                </div>
            {{/unless}}
        {{/if}}
        <div class="coll-item coll-item-type-{{item.type}} {{if (eq item.type 'group') 'coll-item-isgroup'}}">
            <p> Author: {{item.createdBy.computedFullName}} </p>
        </div>
    </div>
{{else}}
    <td>
    </td>
    <td>{{item.createdBy.computedFullName}}</td>
    <td>{{item.type}}</td>
    {{#if organizeMode}}
        <td>

            {{#unless (eq item.type 'group')}}
                {{input checked=item.selected type="checkbox" click=(action 'markSelected' item)}}
            {{/unless}}
        </td>
    {{/if}}
{{/if}}
